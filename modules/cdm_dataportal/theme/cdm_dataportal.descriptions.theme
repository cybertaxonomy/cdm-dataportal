function theme_cdm_featureTrees($mergedTrees, $taxon){

	if(!$mergedTrees){
		return;
	}
	foreach($mergedTrees as &$mTree){
		//TODO diplay title and reference in case of multiple $mergedTrees -> theme
		$out .= theme('cdm_feature_nodes', $mTree->root->children, $taxon);
	}
